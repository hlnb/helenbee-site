<div data-layout="modular-five-columns" class="modular-athens">
    <!-- Archive Header -->
    <header class="module-wide-3">
        <h1>Blog Archive</h1>
    </header>

    <!-- Posts Grid -->
    <section class="posts-grid">
        {% for post in collections.posts %}
        <article class="module-square-1">
            <h2>{{ post.data.title }}</h2>
            <time>{{ post.date | dateFilter }}</time>
            <p>{{ post.data.excerpt }}</p>
            <a href="{{ post.url }}">Read more</a>
        </article>
        {% endfor %}
    </section>

    <!-- Categories Sidebar -->
    <aside class="module-tall-2">
        {% for category in categories %}
        <a href="/category/{{ category.slug }}">{{ category.name }}</a>
        {% endfor %}
    </aside>
</div> 