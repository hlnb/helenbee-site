<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/assets/css/bulma.min.css">
    <link rel="stylesheet" href="/assets/css/variables.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/footer.css">
    
    <!-- Basic favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon/favicon.ico">
    
    <!-- For modern browsers -->
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
    
    <!-- For iOS devices -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
    
    <!-- Web manifest -->
    <link rel="manifest" href="/site.webmanifest">

    <meta name="theme-color" content="#332E63">

    <!-- Open Graph tags (used by Facebook, Mastodon, and others) -->
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:image" content="{{ image }}">
    <meta property="og:url" content="{{ siteUrl }}{{ page.url }}">
    <meta property="og:type" content="article">

    <!-- Mastodon verification -->
    <link rel="me" href="https://mastodon.au/@hlnbee">

    <!-- Bluesky doesn't currently have specific meta tags, it uses Open Graph -->

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,200..900;1,200..900&family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    {% block head %}{% endblock %}

    <!-- Font Awesome - moved to end of head -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    
    {% include "partials/header.njk" %}
    <main>
        {{ content | safe }}
    </main>
    {% include "partials/footer.njk" %}
<script>
 document.addEventListener("DOMContentLoaded", () => {
  const burger = document.querySelector(".navbar-burger");
  const menu = document.querySelector("#navbarMenu");

  if (burger && menu) {
    burger.addEventListener("click", () => {
      burger.classList.toggle("is-active");
      menu.classList.toggle("is-active");
    });
  }
});

function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(() => {
    // Find all copy-text spans
    const copyTexts = document.querySelectorAll('.copy-text');
    const originalTexts = new Map();

    // Store original text and update to "Copied!"
    copyTexts.forEach(span => {
      originalTexts.set(span, span.textContent);
      span.textContent = 'Copied!';
    });

    // Reset after 2 seconds
    setTimeout(() => {
      copyTexts.forEach(span => {
        span.textContent = originalTexts.get(span);
      });
    }, 2000);
  }).catch(err => {
    console.error('Failed to copy text: ', err);
  });
}
</script>
  {% include "partials/cookie-notice.njk" %}
</body>
</html>
