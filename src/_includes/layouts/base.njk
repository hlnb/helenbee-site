<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Helen Burgess</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/grid-four-six.css">
    <link rel="stylesheet" href="/css/grid-layouts.css">
    <link rel="stylesheet" href="/css/grid-modular.css">
    <link rel="stylesheet" href="/css/variables.css">
    {% block head %}{% endblock %}
    <script src="https://kit.fontawesome.com/49adc57732.js" crossorigin="anonymous"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-SEQK0YEX5Z"></script>
    <script>
        // Check for consent before initializing GA4
        if (localStorage.getItem('cookieConsent') === 'accepted') {
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-SEQK0YEX5Z');
        }
    </script>
    </head>
  <body>
    <div id="cookie-banner" style="display: none;">
        <p>We use cookies to improve your experience. <a href="/privacy">Learn more</a></p>
        <button onclick="acceptCookies()">Accept</button>
        <button onclick="declineCookies()">Decline</button>
    </div>

    <script>
        function initGA() {
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-SEQK0YEX5Z');
        }

        function acceptCookies() {
            localStorage.setItem('cookieConsent', 'accepted');
            document.getElementById('cookie-banner').style.display = 'none';
            initGA();
        }

        function declineCookies() {
            localStorage.setItem('cookieConsent', 'declined');
            document.getElementById('cookie-banner').style.display = 'none';
        }

        // Show banner if consent not given
        if (!localStorage.getItem('cookieConsent')) {
            document.getElementById('cookie-banner').style.display = 'block';
        }
    </script>

    {% include "partials/header.njk" %}
    
    <main>
      {{ content | safe }}
    </main>

    {% include "partials/footer.njk" %}
    <script src="/assets/js/main.js"></script>

  </body>
</html>
