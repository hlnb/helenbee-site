<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/assets/css/bulma.min.css">
    <link rel="stylesheet" href="/assets/css/variables.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/editorial-calendar.css">
    <link rel="stylesheet" href="/assets/css/admin.css">
    <link rel="stylesheet" href="/assets/css/forms.css">
    <link rel="stylesheet" href="/assets/css/grid-four-six.css">
    <link rel="stylesheet" href="/assets/css/grid-layouts.css">
    <link rel="stylesheet" href="/assets/css/grid-modular.css">
    <link rel="stylesheet" href="/assets/css/writing-single.css">
    <script src="https://kit.fontawesome.com/49adc57732.js" crossorigin="anonymous"></script>
    
    <!-- Basic favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon/favicon.ico">
    
    <!-- For modern browsers -->
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
    
    <!-- For iOS devices -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
    
    <!-- Web manifest -->
    <link rel="manifest" href="/site.webmanifest">

    <meta name="theme-color" content="#332E63">

    <!-- General Open Graph -->
    <meta property="og:title" content="{{ title }} - {{ author.name }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:image" content="{{ siteUrl }}{{ image }}">
    <meta property="og:url" content="{{ siteUrl }}{{ page.url }}">
    <meta property="og:type" content="{% if layout == 'layouts/writing.njk' %}article{% else %}website{% endif %}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ shortTitle or title }}">
    <meta name="twitter:description" content="{{ twitter_description or socialDescription or description }}">
    <meta name="twitter:image" content="{{ siteUrl }}{{ image }}">
    {% if author.twitter %}
    <meta name="twitter:site" content="{{ author.twitter }}">
    <meta name="twitter:creator" content="{{ author.twitter }}">
    {% endif %}

    <!-- Mastodon -->
    <meta name="mastodon:card" content="summary_large_image">
    <meta name="mastodon:title" content="{{ shortTitle or title }}">
    <meta name="mastodon:description" content="{{ mastodon_description }}">
    {% if author.mastodon %}
    <meta name="mastodon:creator" content="{{ author.mastodon }}">
    {% endif %}

</head>
<body>
    
    {% include "partials/header.njk" %}
    <main>
        {{ content | safe }}
    </main>
    {% include "partials/footer.njk" %}
<script>
 document.addEventListener("DOMContentLoaded", () => {
  const burger = document.querySelector(".navbar-burger");
  const menu = document.querySelector("#navbarMenu");

  if (burger && menu) {
    burger.addEventListener("click", () => {
      burger.classList.toggle("is-active");
      menu.classList.toggle("is-active");
    });
  }
});

function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(() => {
    // Find all copy-text spans
    const copyTexts = document.querySelectorAll('.copy-text');
    const originalTexts = new Map();

    // Store original text and update to "Copied!"
    copyTexts.forEach(span => {
      originalTexts.set(span, span.textContent);
      span.textContent = 'Copied!';
    });

    // Reset after 2 seconds
    setTimeout(() => {
      copyTexts.forEach(span => {
        span.textContent = originalTexts.get(span);
      });
    }, 2000);
  }).catch(err => {
    console.error('Failed to copy text: ', err);
  });
}
</script>
</body>
</html>
