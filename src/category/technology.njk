---
layout: base.njk
permalink: /category/technology/
title: Technology Posts
---

<div class="page-container writings-collection">
  <div class="writings-header">
    <h1>Technology Posts</h1>
  </div>

  <div class="writings-grid">
    {% for post in collections.technologyPosts %}
      <article class="writing-card">
        <!-- Same card structure as your writings.njk -->
        <a href="{{ post.url }}" class="writing-link">
          {% if post.data.image %}
            <div class="writing-image-container">
              <img src="{{ post.data.image }}" 
                   alt="{{ post.data.title }}" 
                   class="writing-image"
                   loading="lazy">
            </div>
          {% endif %}
          
          <div class="writing-content">
            <h2>{{ post.data.title }}</h2>
            <time datetime="{{ post.date | dateToISO }}">
              {{ post.date | dateDisplay }}
            </time>
            {% if post.data.excerpt %}
              <div class="writing-excerpt">
                {{ post.data.excerpt }}
              </div>
            {% endif %}
            <span class="read-more">Read more</span>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</div>
