---
layout: base.njk
title: Writings
permalink: /writings/
---

<div class="page-container">
  <div class="writings-header">
    <h1>Writings</h1>
  </div>

  <div data-layout="modular-four-columns">
    {% for post in collections.writings | reverse %}
      <div class="module-square-2">
        <article class="writing-card">
          <a href="{{ post.url }}" class="writing-link">
            {% if post.data.image %}
              <div class="writing-image-container">
                <img src="{{ post.data.image }}" 
                     alt="{{ post.data.title }}" 
                     class="writing-image"
                     loading="lazy">
              </div>
            {% endif %}
            
            <div class="writing-content">
              <h2>{{ post.data.title }}</h2>
              
              <time datetime="{{ post.date | dateToISO }}">
                {{ post.date | dateDisplay }}
              </time>
              
              {% if post.data.excerpt %}
                <div class="writing-excerpt">
                  {{ post.data.excerpt }}
                </div>
              {% endif %}
              
              <span class="read-more">Read more</span>
            </div>
          </a>
        </article>
      </div>
    {% endfor %}
  </div>
</div>